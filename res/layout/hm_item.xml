<?xml version="1.0" encoding="utf-8"?>
<cheng.app.cnbeta.ui.HmListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_hm"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hm_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="@string/share"
        android:src="@drawable/share" />

    <TextView
        android:id="@+id/hm_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="-20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="10dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/news_text_color" />

    <TextView
        android:id="@+id/hm_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/news_info_color"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/hm_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/news_title_color"
        android:textStyle="bold" />

</cheng.app.cnbeta.ui.HmListItemView>