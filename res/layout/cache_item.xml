<?xml version="1.0" encoding="utf-8"?>
<cheng.app.cnbeta.ui.CacheListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout android:id="@+id/cache_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_newslist"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cache_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/news_title_color"
            android:padding="10dip"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cache_item_time"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/news_detial_color" />

            <TextView
                android:id="@+id/cache_item_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/news_detial_color" />
        </LinearLayout>
    </LinearLayout>

    <cheng.app.cnbeta.ui.CheckableImageView
        android:id="@+id/cache_item_checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/cache_item"
        android:layout_alignTop="@id/cache_item"
        android:layout_alignRight="@id/cache_item"
        android:layout_alignBottom="@id/cache_item"
        android:background="@drawable/activated_background_holo_dark"
        android:clickable="false"
        android:duplicateParentState="true"
        android:focusable="false" />

</cheng.app.cnbeta.ui.CacheListItemView>